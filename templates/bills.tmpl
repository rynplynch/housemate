<html>
	{{ range .data }}
		<form action="/bills" method="post">
			<label for="ID">DUE: {{ .Due | formatAsDuedate }} | Description: {{ .Description }} | </label>
			<label for="Paid">Amount Owed: ${{ .Amount }} | Amount Paid: ${{ .Paid }} | Add: </label>
			<input type="hidden" value="{{ .ID }}" name="ID">
			<input type="number" value="0" step="0.01" min="0" max="{{ .Amount }}" name="Paid">
		</form>
	{{ end }}
</html>
